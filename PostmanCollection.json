              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{centralUser}}\",\n  \"email\": \"central@oreo.com\",\n  \"password\": \"{{password}}\",\n  \"role\": \"ROLE_CENTRAL\",\n  \"branch\": \"Central\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
